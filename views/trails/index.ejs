<%- include('../partials/header') %>
    <h1>
        H&H
    </h1>
    <table id="list">
        <tbody>
            <% trails.forEach(function(t) { %>
                <tr>
                    <td>
                        <%= t.trailName %>
                    </td>
                    <td>
                        <%= t.location %>
                    </td>
                    <td>
                        <img src="<%= t.image %>" alt="image">
                    </td>
                    <td><a href="/trails/<%= t._id %>">DETAILS</a></td>
                    <td><button>Favorite</button></td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <%- include('../partials/footer') %>